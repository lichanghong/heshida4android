<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--多盟-->
    <RelativeLayout
        android:id="@+id/duomengadcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

    </RelativeLayout>

    <!-- 有米-->
    <LinearLayout
        android:id="@+id/youmiadLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
    </LinearLayout>
    <!--万普-->
    <LinearLayout
        android:id="@+id/wanpuAdLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"/>

    <!--百度-->
    <RelativeLayout
        android:id="@+id/appx_banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/miniAdLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" />
    <!--<include layout="@layout/schedule_layout"></include>-->
    <!--<WebView-->
        <!--android:id="@+id/home_webView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

    <!--</WebView>-->

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            >
           <HorizontalScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:scrollbars="horizontal"
               android:layout_gravity="center_vertical"
               >
                <LinearLayout
                    android:id="@+id/homegallery"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    >

                </LinearLayout>
           </HorizontalScrollView>

            <TextView
                android:id="@+id/new1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="校内新闻"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_marginLeft="20dp" ></TextView>
            <TextView
                android:id="@+id/new2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="校内新闻"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp" ></TextView>
            <TextView
            android:id="@+id/new3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="校内新闻"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp" ></TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"
                ></View>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/webSchoolBtn"
                    android:textColor="#0066ff"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/heshida"
                    android:layout_height="match_parent"
                    android:text="网页校园"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    >
                </Button>
                <!--<Button-->
                    <!--android:textColor="#0066ff"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="点评校园"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!-->-->
                <!--</Button>-->

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


