<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <heshida.haihong.com.heshida.TopBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/topbarRegister"
        tools:background="#ffffff"
        custom:titleTextSize="16sp"
        custom:buttonMode="left"
        custom:leftHeight="40dp"
        custom:leftMargin="12dp"
        custom:leftWidth="40dp"
        >
    </heshida.haihong.com.heshida.TopBar>

    <TableLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="手机号码"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                />
            <EditText
                android:id="@+id/login_phone"
                android:hint="手机号码"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="密    码"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                />
            <EditText
                android:id="@+id/login_pwd"
                android:hint="密码"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:password="true"
                />
        </TableRow>



    </TableLayout>

    <LinearLayout
        android:gravity="right"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/login_loginBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:background="@drawable/send_msg1"
            android:text="登录"/>
        <Button
            android:id="@+id/login_registerBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:background="@drawable/send_msg1"
            android:text="注册"/>
    </LinearLayout>



</LinearLayout>
