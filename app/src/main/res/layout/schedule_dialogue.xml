<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/schedule_add_list_scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="请填写上午一二节课科目信息"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_amup_schedulename"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:hint="科目名称"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_amup_teachername"
            android:layout_marginTop="2dp"
            android:hint="教师姓名"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_amup_location"
            android:layout_marginTop="2dp"
            android:hint="上课地点"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_amup_other"
            android:layout_marginTop="2dp"
            android:hint="其他备注"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="请填写上午三四节课科目信息"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_amdown_schedulename"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:hint="科目名称"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_amdown_teachername"
            android:layout_marginTop="2dp"
            android:hint="教师姓名"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_amdown_location"
            android:layout_marginTop="2dp"
            android:hint="上课地点"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_amdown_other"
            android:layout_marginTop="2dp"
            android:hint="其他备注"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="请填写下午一二节课科目信息"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_pmup_schedulename"
            android:layout_marginTop="2dp"
            android:hint="科目名称"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_pmup_teachername"
            android:layout_marginTop="2dp"
            android:hint="教师姓名"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_pmup_location"
            android:layout_marginTop="2dp"
            android:hint="上课地点"
            android:textSize="12dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_pmup_other"
            android:layout_marginTop="2dp"
            android:hint="其他备注"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="请填写下午三四节课节课科目信息"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_pmdown_schedulename"
            android:layout_marginTop="2dp"
            android:hint="科目名称"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_pmdown_teachername"
            android:layout_marginTop="2dp"
            android:hint="教师姓名"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
