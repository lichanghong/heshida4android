<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/scheduleLayout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#f0ffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tv_week"
        android:text="星\n期\n一"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        />
    <View
        android:layout_marginLeft="5dp"
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#f5f5f5"
        android:visibility="visible" />
    <TextView
        android:id="@+id/tvam"
        android:text="上\n午"
        android:textSize="11sp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        />
    <View
        android:layout_marginLeft="5dp"
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#f5f5f5"
        android:visibility="visible" />
    <LinearLayout
        android:background="#fafff0"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/AM_one"
            android:text="计算机科学技术\t李长鸿\n勤政楼\t320\t其他备注"
            android:textColor="#a39480"
            android:background="#fafff0"
            android:layout_width="match_parent"
            android:textSize="10dp"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/AM_two"
            android:text="计算机科学技术\t李长鸿\n勤政楼\t320\t其他备注"
            android:textSize="10sp"
            android:textColor="#a39480"
            android:background="#ffffcd"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvpm"
        android:text="下\n午"
        android:textSize="11sp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        />
    <View
        android:layout_marginLeft="5dp"
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#f5f5f5"
        android:visibility="visible" />
    <LinearLayout
        android:background="#fafff0"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/PM_one"
            android:text="科目名称\t教师名字\n上课地址\t320\t其他备注"
            android:textSize="10sp"
            android:background="#fafff0"
            android:textColor="#a39480"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/PM_two"
            android:text="科目名称\t教师名字\n上课地址\t320\t其他备注"
            android:textSize="10sp"
            android:textColor="#a39480"
            android:background="#ffffcd"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />

    </LinearLayout>

    <View
        android:layout_marginLeft="5dp"
        android:layout_width="0.5px"
        android:layout_height="fill_parent"
        android:background="#f5f5f5"
        android:visibility="visible" />

</LinearLayout>
